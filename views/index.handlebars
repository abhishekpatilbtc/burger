<h1>Eat-Da-Burger!</h1>
<div class="row">
    <div class="eaten">
        <h4>Eaten burgers</h4>
        {{#each burgers}}
        {{#if devoured}}
        <p> {{burger_name}} </p>
        {{/if}}
        {{/each}}
    </div>


    <div class="notEaten">
        <h4>Burgers not eaten yet</h4>
        {{#each burgers}}
        {{#unless devoured}}
        <p>
         {{burger_name}}
            <button class="devour" data-id="{{id}}" data-name="{{burger_name}}">
                Devour it!
            </button>
        </p>
        {{/unless}}
        {{/each}}
    </div>
</div>
<form class="create-burger">
    <input type="text" id="burger-name-id" name="burgerName" size="35">
    <input id="submit-id" type="submit" value="Submit">
</form>